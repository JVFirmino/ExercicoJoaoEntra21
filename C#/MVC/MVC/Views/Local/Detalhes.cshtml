@model Local
@{
    ViewData["Title"] = "Detalhes";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>@Model.Id</p>
            </div>
            <div class="form-group">
                <p>@Model.Name</p>
            </div>
            <div class="form-group">
                <p>@Model.Numero</p>
            </div>
            <div class="form-group">
                <p>@Model.Rua</p>
            </div>
            <div class="form-group">
                <p>@Model.Bairro</p>
            </div>
            <div class="form-group">
                <p>@Model.Cidade</p>
            </div>
            <div class="form-group">
                <p>@Model.Cep</p>
            </div>
            <div class="form-group">
                <p>@Model.Uf</p>
            </div>
            <div class="form-group">
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>